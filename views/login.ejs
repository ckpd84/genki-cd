<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
<%- include ('partials/header') %>

<!-- Empieza Main -->

<h2>Formulario de login</h2>

<form action="/users/login" method="POST">
    <% if (typeof errors !== 'undefined') {
        errors.map(function(error){ %>
        <ul>
            <li style="color:red; margin-left:30px"><%= error.msg %></li>
        </ul>
    <% }) } %>
<div class="form-row">
    <div class="form-group col-md-4">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control" id="inputEmail4" name="email" value="<%= typeof data != 'undefined' ? data.email : '' %>">
      </div>
</div>

<div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputPassword4">Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="password" value="<%= typeof data != 'undefined' ? data.email : '' %>">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
    <p>No tenes cuenta? <a href="./register" class="card-link">Registrate</a></p> 

</form>
  <!-- pie -->
 
  <%- include('./partials/footer') %>

  <%- include('./partials/scripts') %>
</body>
</html>