    <%- include ('partials/header') %>

<!-- Empieza Main -->

<div class="card" style="width: 18rem;">
    <img src="/img/users/<%= user.image %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= user.name %> <%= user.lastName %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">TELEFONO <%= user.phone %></li>
      <li class="list-group-item">DOMICILIO <%= user.street_name %> <%= user.street_number %></li>
      <li class="list-group-item">ENTRE CALLES <%= user.cross_street_name %></li>
      <li class="list-group-item">LOCALIDAD <%= user.city %></li>
      <li class="list-group-item">BARRIO <%= user.neighborhood %></li>
    </ul>
    <div class="card-body">
      <a href="./changepassword" class="card-link">EDITAR CONTRASEÃ‘A</a><BR>
