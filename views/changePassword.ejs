<!DOCTYPE html>
<html>

<head>

  <%- include('./partials/head') %>

  <link rel="stylesheet" href="/css/register.css">
  
</head>

<body>
  <div class="container-fluid">

    <%- include('./partials/header') %>  


    <!-- Empieza Main -->

  <div class=container>
    <div class="main-body row">
     <form action="/users/changePassword?_method=PUT" method="POST" >
    
      <% if (typeof errors !== 'undefined') {
        errors.map(function(error){ %>
        <ul>
            <li style="color:red; margin-left:30px"><%= error.msg %></li>
        </ul>
    <% }) } %>
  
        
    <!-------------------------------------->
    <div class="form-row">
        <div class="form-group col-md-6">
            <h2>Establece una nueva contraseña</h2>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" name="email" value="<%= typeof data != 'undefined' ? data.email : '' %>">
        </div>    
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Nueva Contraseña</label>
          <input type="password" class="form-control" id="inputPassword4" name="password" placeholder="Entre 6 y 10 caracteres">
        </div>
        <div class="form-group col-md-6 d-flex align-items-end">
          <input type="password" class="form-control" id="inputPassword4" name="repeatPassword" placeholder="Repetir contraseña">
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar</button>
  </form>
  
  </div>
  </div>


  <!-- pie -->
 
  <%- include('./partials/footer') %>

  <%- include('./partials/scripts') %>

</div>
</body>

</html>