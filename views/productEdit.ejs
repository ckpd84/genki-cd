<!DOCTYPE html>
<html>

<head>

  <%- include('./partials/head') %>

  <link rel="stylesheet" href="/css/productAdd.css">
  
</head>

<body>
  <div class="container-fluid">

    <%- include('./partials/header') %> 

    <!-- Empieza Main -->

    <div class=container>
      <div class="main-body row">

        <form action="/productos/edit/<%= product.id %>?_method=PUT" method="POST">
			
          <div class="form-group">
            <label for="inputName">Nombre</label>
            <input type="text" class="form-input" id="inputNombre" name="name" placeholder="<%= product.name %>">
			
          </div>
        
          <div class="form-group">
            <label for="inputState">Categoria</label>
            <input type="text" class="form-input" id="inputState" name="category" placeholder="<%= product.category %>">            
          </div>

          <div class="form-group">
            <label for="inputState">Tipo</label>
            <input type="text" class="form-input" id="inputState" name="type" placeholder="<%= product.type %>">
          </div>
     
          <div class="form-group">
            <label for="TextareaDetalle">Detalle</label>
            <textarea class="form-control" id="TextareaDetalle" rows="3" name="detail"><%= product.detail %></textarea>
          </div>
     
          <div class="form-group">
            <label for="inputPrecio">Precio</label>
            <input type="number" class="form-control" id="inputPrecio" name="price" placeholder="<%= product.price %>">
          </div>
     
         //imagen     
              
          <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </form>

		<form action="/productos/delete/<%= product.id %>?_method=DELETE" method="POST">
			      <button type="submit" class="btn btn-danger">ELIMINAR</button>
        </form>
		
      </div>
    </div>
     
  <!-- pie -->
  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %> 
  </div>
</body>
</html>