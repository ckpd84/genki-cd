<!DOCTYPE html>
<html>

<head>

  <%- include('./partials/head') %>

  <link rel="stylesheet" href="/css/productAdd.css">
  
</head>

<body>

    <%- include('./partials/header') %> 

    <!-- Empieza Main -->

    <div class=container>
      <div class="main-body row">

        <form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
			
          <div class="form-group">
            <label for="inputName">Nombre</label>
            <input type="text" class="form-input" id="inputNombre" name="name" value="<%= product.name %>">
			
          </div>
        
          <div class="form-group">
            <label for="inputState">Categoria</label>
            <input type="text" class="form-input" id="inputState" name="category" value="<%= product.category %>">            
          </div>

          <div class="form-group">
            <label for="inputState">Tipo</label>
            <input type="text" class="form-input" id="inputState" name="type" value="<%= product.type %>">
          </div>
     
          <div class="form-group">
            <label for="TextareaDetalle">Detalle</label>
            <textarea class="form-control" id="TextareaDetalle" rows="3" name="detail"><%= product.detail %></textarea>
          </div>
     
          <div class="form-group">
            <label for="inputPrecio">Precio</label>
            <input type="number" class="form-control" id="inputPrecio" name="price" value="<%= product.price %>">
          </div>
     
          <div class="col-8">
            <img src="/img/<%= product.image %>" alt="product image" class="product-detail-img">
          </div>  
          
          <div class="custom-file">
            <input type="file" class="custom-file-input" name= "image" id="validatedCustomFile">
            <label class="custom-file-label" for="validatedCustomFile">Agregar imagen...</label>
            <div class="invalid-feedback">Example invalid custom file feedback</div>
          </div>
              
          <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </form>

		
      </div>
    </div>
     
  <!-- pie -->
  <%- include('./partials/footer') %>

  <%- include('./partials/scripts') %> 

  <script>
    $(function() {
      $(".toggle").on("click", function() {
          if ($(".item").hasClass("active")) {
              $(".item").removeClass("active");
              $(this).find("a").html("<i class='fas fa-bars'></i>");
          } else {
              $(".item").addClass("active");
              $(this).find("a").html("<i class='fas fa-times'></i>");
          }
      });
    });
    </script>
  
</body>
</html>