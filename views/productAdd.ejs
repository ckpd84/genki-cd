<!DOCTYPE html>
<html>

<head>

  <%- include('./partials/head') %>

  <link rel="stylesheet" href="/css/productAdd.css">
  
</head>

<body>

    <%- include('./partials/header') %> 

    <!-- Empieza Main -->

    <div class="ct-add">
      <div class="main-body row">

        <form method="POST" action="/products/create" enctype="multipart/form-data">
          <h1>Formulario de Carga de Producto</h1>
          <div class="form-group">
            <label for="inputName">Nombre</label>
            <input type="text" class="form-control" id="inputNombre" name="name">
          </div>
        
          <div class="form-group">
            <label for="inputState">Categoria</label>
            <select id="inputState" class="form-control" name="category">
              <option value="1" selected>CLASICOS</option>
              <option value="2">MAKIS</option>
              <option value="3">FRITOS</option>
              <option value="4">ARGENTOS</option>
              <option value="5">ESPECIALES SIN ARROZ</option>
              <option value="6">ESPECIALES CON ARROZ</option>
              <option value="7">TABLAS</option>
              <option value="8">ENTRANTES</option>
           </select>
          </div>

          <div class="form-group">
            <label for="inputState">Tipo</label>
            <select id="inputState" class="form-control" name="type">
              <option value="1" selected>MAKI</option>
              <option value="2">URAMAKI</option>
              <option value="3">HOSOMAKI</option>
              <option value="4">NIGIRIS</option>
              <option value="5">SASHIMI</option>
              <option value="6">FUTOMAKI</option>
              <option value="7">TEMAKI</option>
              <option value="8">GUNKAN</option>
              <option value="9">OSHI</option>
              <option value="10">ONIGIRI</option>
              <option value="11">ROLLS</option>
              <option value="12">CALIENTES</option>
           </select>
          </div>
          
            <div class="form-group">
              <label for="TextareaDetalle">Detalle</label>
              <textarea class="form-control" id="TextareaDetalle" rows="3" name="detail"></textarea>
            </div>
      
            <div class="form-group">
              <label for="inputPrecio">Precio</label>
              <input type="number" class="form-control" id="inputPrecio" name="price">
            </div>
        

          <div class="input-group" id="foto">
            <label class="custom-file-label" for="validatedCustomFile">Agregar imagen...</label>
            <input type="file" class="custom-file-input" name= "image" id="validatedCustomFile" required>
            
            <!-- <div class="invalid-feedback">Example invalid custom file feedback</div> -->
          </div>
     
          <button type="submit">Agregar Producto</button>
        </form>
     
      </div>
    </div>
     
  <!-- pie -->
  <%- include('./partials/footer') %>

  <%- include('./partials/scripts') %> 

  <script>
    $(function() {
      $(".toggle").on("click", function() {
          if ($(".item").hasClass("active")) {
              $(".item").removeClass("active");
              $(this).find("a").html("<i class='fas fa-bars'></i>");
          } else {
              $(".item").addClass("active");
              $(this).find("a").html("<i class='fas fa-times'></i>");
          }
      });
    });
    </script>
  
</body>
</html>