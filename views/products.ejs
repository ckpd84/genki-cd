<html>

<head>

  <%- include('./partials/head') %>

  <link rel="stylesheet" href="/css/products.css">
  
</head>

<body>

    <%- include('./partials/header') %> 

<!-- Empieza Main -->

    <div class="productos col-12">

      <div class="menu-dos">
				<nav class= "nav-dos">
